<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="floating_label_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="j_fle_thickness">2dp</item>
        <item name="j_fle_error_textSize">10sp</item>
        <item name="j_fle_label_textSize">10sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="j_fle_colorDivider">#AA00FF</item>
        <item name="android:background">#55FFFF</item>
        <item name="j_fle_divider_vertical_margin">5dp</item>
        <item name="j_fle_label_vertical_margin">5dp</item>
        <!--<item name="android:paddingRight">20dp</item>-->
    </style>
</resources>
